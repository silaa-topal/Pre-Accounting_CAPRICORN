@model Pre_Accounting_CAPRICORN.Models.Personnel
@{
    ViewBag.Title = "NewPersonnel";
}

<h2>New Personnel</h2>
<br/>
<form class="form-group" method="post">
    @Html.Label("Name")
    @Html.TextBoxFor(x => x.PersonnelName, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Title)
    @Html.DropDownListFor(x => x.Title, (List<SelectListItem>)ViewBag.titles, "Choose Title", new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Username)
    @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Password)
    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Authority)
    @Html.TextBoxFor(x => x.Authority, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Status)
    @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
    <br />
    <button class="btn btn-secondary">Save</button>
</form>

