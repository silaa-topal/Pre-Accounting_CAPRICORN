@model Pre_Accounting_CAPRICORN.Models.Personnel
@{
    Layout = null;
    ViewBag.Title = "Login";
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/Login2.css" />
    <title>Hello, world!</title>
    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        body {
            background: rgba(219,226,226);
            align-items: center;
        }
        .container{
            max-width:1000px;
            
        }
        .row {
            background: white;
            border-radius: 30px;
            box-shadow: 12px 12px 22px grey;
        }

        .accounting {
            border-top-left-radius: 30px;
            border-bottom-left-radius: 30px;
            width: 100%;
            height: 100%;
        }

        .logo {
            display: block;
            margin-left: auto;
            margin-right: auto;
            width: 50%;
        }

        .btn1 {
            border: none;
            outline: none;
            height: 50px;
            width: 100%;
            background-color: rgb(112, 111, 111);
            color: white;
            border-radius: 4px;
            font-weight: bold;
        }

            .btn1:hover {
                background: white;
                border: 1px solid;
                color: darkgray;
            }

        .Error {
            color:darkred;
            font-family: 'Times New Roman';
        }
    </style>
</head>
<body>
    <section class="Form my-4 mx-5">
        <div class="container">
            <div class="row no-gutters">
                <div class="col-lg-5">
                    <img class="accounting" src="~/accounting.jpg" />
                </div>
                <div class="col-lg-7 px-5 ">
                    <img class="logo" src="~/C.png" />
                    <h4 style="color:rgb(52, 50, 50); text-align:center">Login to your account!</h4>
                    <form asp-action="PersonnelLogin" asp-controller="Login" class="form" method="post">
                        <div class="form-row">
                            <div class="col-lg-7 logo py-1">
                                @Html.ValidationMessageFor(x => x.Username, "", new { @class = "Error" })
                                <input type="text" name="Username" id="Username" placeholder="Username" class="form-control my-3 p-4"/>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-7 logo">
                                @Html.ValidationMessageFor(x => x.Password, "", new { @class = "Error" })
                                <input type="password" name="Password" id="Password" placeholder="Password" class="form-control my-3 p-4" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-7 logo">
                                <button type="submit" class=" btn1 mt-1 mb-5" value="Login">Login</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>


