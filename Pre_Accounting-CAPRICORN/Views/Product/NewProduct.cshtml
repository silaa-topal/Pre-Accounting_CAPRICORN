@model Pre_Accounting_CAPRICORN.Models.Product
@{
    ViewBag.Title = "NewProduct";
}

<br />
<h2> New Product</h2>
<br />
<form asp-action="NewProduct" asp-controller="Product" class="form-group" method="post">
    @*@Html.ValidationSummary(false, "", new { @class = "Error" })*@
    @Html.Label("Product Name")
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.ProductName, "", new { @class = "Error" })
    @Html.HiddenFor(x => x.ProductID)
    <br />
    @Html.LabelFor(x => x.Brand)
    @Html.TextBoxFor(x => x.Brand, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Stock)
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Category.CategoryName)
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.cat, "Choose Category", new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Status)
    @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
    <br />
    <button class="btn btn-secondary">Save</button>
</form>

<style>
    .Error{
        color:red;
        font-family: "Times New Roman";
        
    }
</style>
